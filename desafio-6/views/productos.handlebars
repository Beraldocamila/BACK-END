<body>
    <h2>Productos</h2>

{{#if productos.length}}
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each productos}}
                <tr>
                    <td>{{this.id}}  </td>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><a href="/productos/detalle/{{this.id}}"><img src="{{this.thumbnail}}" width="100px"></a></td>
                </tr>

            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class='message'><h2>No hay ningun producto</h2></div>
    {{/if}}
        <button><a href="/productos">Agregar producto</a></button>

</body>


